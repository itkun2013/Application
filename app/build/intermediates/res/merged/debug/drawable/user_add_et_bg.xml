<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape
            android:shape="rectangle"
            >
            <solid
                android:color="@color/first_page_grey"
                />
            <stroke
                android:width="0.5dp"
                android:color="@color/first_page_grey"
                />
            <corners
                android:radius="3dp"
                />
        </shape>
    </item>
    <item
        android:state_focused="true"
        >
        <shape
            android:shape="rectangle"
            >
            <solid
                android:color="#fff"
                />
            <stroke
                android:width="0.5dp"
                android:color="#3bd1bf"
                />
            <corners
                android:radius="3dp"
                />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            >
            <solid
                android:color="#fff"
                />
            <stroke
                android:width="0.5dp"
                android:color="#cccccc"
                />
            <corners
                android:radius="3dp"
                />
        </shape>
    </item>
</selector>
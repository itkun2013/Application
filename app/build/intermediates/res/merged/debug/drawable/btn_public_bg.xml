<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        >
        <shape
            android:shape="rectangle"
            >
            <corners
                android:radius="3dp"
                />
            <solid
                android:color="#e6e6e6"
                />
            <stroke
                android:color="@color/actionbar_bg_color"
                android:width="1dp"
                />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            >
            <corners
                android:radius="3dp"
                />
            <solid
                android:color="#fff"
                />
            <stroke
                android:color="@color/actionbar_bg_color"
                android:width="1dp"
                />
        </shape>
    </item>
</selector>
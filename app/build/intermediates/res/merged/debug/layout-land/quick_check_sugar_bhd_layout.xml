<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@drawable/bg_above">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/suagr_bhd"
                android:textColor="@color/white"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/qc_uri_result"
                android:textColor="@color/white"
                android:textSize="@dimen/urine_text_size"
                android:layout_marginLeft="@dimen/sugar_bhd_margin_10"
                />

            <TextView
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/urine_text_size"
                android:gravity="center"
                android:text="@string/qc_uri_reference"
                android:textColor="@color/white"
                android:paddingRight="15dp"
                android:layout_marginLeft="@dimen/sugar_bhd_margin_10"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/bg_below"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        >

        <!--NGSP-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:gravity="left"
                android:text="@string/ngsp"
                android:textColor="@color/range_color"
                />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="14px"
                    android:gravity="left"
                    android:text="@string/ngsp_unit"
                    android:textColor="@color/range_color"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_ngsp_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/urine_text_size"
                android:text="@string/default_value"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:textColor="@color/range_color"
                android:layout_marginLeft="@dimen/sugar_bhd_margin_10"
                />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/urine_text_size"
                android:text="@string/ngsp_range"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:paddingRight="15dp"
                android:textColor="@color/range_color"
                android:layout_marginLeft="@dimen/sugar_bhd_margin_10"
                />

        </LinearLayout>
        <!--IFCC-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:gravity="left"
                android:text="@string/ifcc"
                android:id="@+id/textView"
                android:textColor="@color/range_color"
                />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="14px"
                    android:gravity="left"
                    android:text="@string/eag_unit"
                    android:textColor="@color/range_color"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_ifcc_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/urine_text_size"
                android:text="@string/default_value"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:textColor="@color/range_color"
                android:layout_marginLeft="@dimen/sugar_bhd_margin_10"
                />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/urine_text_size"
                android:text="@string/ifcc_range"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:paddingRight="10dp"
                android:textColor="@color/range_color"
                android:layout_marginLeft="@dimen/sugar_bhd_margin_10"
                />

        </LinearLayout>
        <!--eAG-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:gravity="left"
                android:text="@string/eag"
                android:textColor="@color/range_color"
                />
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="14px"
                    android:gravity="left"
                    android:text="@string/ifcc_unit"
                    android:textColor="@color/range_color"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_eag_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/urine_text_size"
                android:text="@string/default_value"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:textColor="@color/range_color"
                android:layout_marginLeft="@dimen/sugar_bhd_margin_10"
                />

            <TextView
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/urine_text_size"
                android:text="@string/eag_range"
                android:gravity="center"
                android:paddingRight="15dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/range_color"
                android:layout_marginLeft="@dimen/sugar_bhd_margin_10"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

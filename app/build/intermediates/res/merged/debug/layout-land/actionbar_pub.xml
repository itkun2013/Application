<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/ic_nav_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_nav_back"
        android:background="@drawable/bg_patient_list_menu"
        />

    <TextView
        android:id="@+id/left_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50dp"
        android:textColor="@color/actionbar_color"
        android:textSize="@dimen/actionbar_size" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:textColor="@color/actionbar_color"
        android:textSize="@dimen/actionbar_size"
        android:paddingLeft="@dimen/navigationbar_title_padding"
        android:paddingRight="@dimen/navigationbar_title_padding"
        android:background="@drawable/navigationbar_title_bg"
        />

    <TextView
        android:id="@+id/right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/actionbar_color"
        android:textSize="@dimen/actionbar_size"/>

    <LinearLayout
        android:id="@+id/right_conteiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="750dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"/>
</RelativeLayout>

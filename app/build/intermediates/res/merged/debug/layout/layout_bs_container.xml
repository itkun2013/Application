<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_glu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="#c5ffcc"/>

    <TextView
        style="@style/report_title_style"
        android:text="@string/blood_three"/>


    <include layout="@layout/layout_report_subtitle"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_glu_style"
            style="@style/report_first_item_style"
            android:paddingRight="18dp"
            android:text="@string/x_bs"/>

        <TextView
            android:id="@+id/tv_bs"
            style="@style/report_content_style"
            android:text="@string/_5"/>

        <TextView
            style="@style/report_content_style"
            android:text="@string/x_measure_unit_mmol"/>

        <TextView
            android:id="@+id/tv_glu_refenrence"
            style="@style/report_content_style"
            android:text="@string/x_measure_bs_reference"/>

        <ImageView
            android:id="@+id/iv_bs_hint"
            style="@style/report_pic_style"/>
    </LinearLayout>

    <!-- 尿酸 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_ns_style"
            style="@style/report_first_item_style"
            android:text="@string/qc_ns"/>

        <TextView
            android:id="@+id/tv_ns"
            style="@style/report_content_style"
            android:text="@string/_5"/>

        <TextView
            style="@style/report_content_style"
            android:text="@string/x_measure_unit_mmol"/>

        <TextView
            android:id="@+id/ns_reference"
            style="@style/report_content_style"
            android:text="@string/x_measure_ns_reference"/>

        <ImageView
            android:id="@+id/iv_ns_hint"
            style="@style/report_pic_style"/>
    </LinearLayout>

    <!-- 总胆固醇 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_td_style"
            style="@style/report_first_item_style"
            android:text="@string/qc_dgc"/>

        <TextView
            android:id="@+id/tv_td"
            style="@style/report_content_style"
            android:text="@string/_5"/>

        <TextView
            style="@style/report_content_style"
            android:text="@string/x_measure_unit_mmol"/>

        <TextView
            android:id="@+id/td_reference"
            style="@style/report_content_style"
            android:text="@string/x_measure_td_reference"/>

        <ImageView
            android:id="@+id/iv_td_hint"
            style="@style/report_pic_style"/>
    </LinearLayout>
</LinearLayout>
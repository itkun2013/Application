<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/layout_bottom"
    android:paddingLeft="@dimen/layout_bottom"
    android:paddingRight="@dimen/layout_bottom"
    android:paddingTop="@dimen/layout_bottom">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginLeft="450dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/login_selector"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/login_page_margin_left"
                android:layout_marginTop="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号登录"
                    android:textColor="#666666"
                    android:textSize="25sp" />
            </LinearLayout>
            <!--用户名-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/login_page_margin_left"
                    android:layout_marginTop="28dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/username_ed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/username_selector"
                        android:maxLength="20"
                        android:minWidth="80dp"
                        android:paddingLeft="45dp"
                        android:singleLine="true"
                        android:text="" />

                    <ImageView
                        android:id="@+id/username_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_clean" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/login_page_margin_left"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/password_ed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/password_selector"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:minWidth="80dp"
                        android:paddingLeft="45dp"
                        android:singleLine="true"
                        android:text="" />

                    <ImageView
                        android:id="@+id/password_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_clean" />
                </RelativeLayout>
            </LinearLayout>

            <!--登录注册-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/text_right">

                <Button
                    android:id="@+id/login_btn"
                    android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/login_page_margin_left"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ks_btn_bg"
                    android:focusableInTouchMode="false"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />

                <Button
                    android:id="@+id/register_btn"
                    android:layout_width="280dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_register_selector"
                    android:focusableInTouchMode="false"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="健康一体机"
        android:textSize="30sp"
        android:textColor="#666666"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="-55dp"
        />
</RelativeLayout>

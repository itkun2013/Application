<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/btn_menu_add"
        android:background="@drawable/bg_patient_list_menu"
        android:src="@drawable/ic_nav_added"
        android:layout_width="44dp"
        android:layout_height="44dp"/>
    <ImageView
        android:id="@+id/btn_menu_download"
        android:background="@drawable/bg_patient_list_menu"
        android:src="@drawable/ic_nav_download"
        android:layout_width="44dp"
        android:layout_height="44dp"/>
    <ImageView
        android:id="@+id/btn_menu_query"
        android:background="@drawable/bg_patient_list_menu"
        android:src="@drawable/ic_nav_filtrate"
        android:layout_width="44dp"
        android:layout_height="44dp"/>

    <TextView
        android:id="@+id/btn_menu_delete"
        android:background="@drawable/bg_patient_list_menu"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#fff"
        android:text="@string/patient_menu_manage"
        android:layout_width="44dp"
        android:layout_height="44dp"/>
</LinearLayout>
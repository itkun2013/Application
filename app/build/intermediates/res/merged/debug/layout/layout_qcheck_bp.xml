        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/quick_margin_left"
        android:gravity="center"
        android:text="@string/qc_bp"
        android:textColor="@color/quick_measure_text_color_1"
        android:textSize="15sp"
        />


                <!--android:textColor="#333"-->
                <!--android:textSize="20sp"-->
                <!--/>-->
        <!--</LinearLayout>-->
        <ImageView
            android:id="@+id/iv_xd_icon"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/alarm_high"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="@string/health_unit_mmhg"
        android:textColor="@color/quick_measure_text_color_1"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/quick_margin_left"
        android:layout_marginBottom="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/quicl_measure_text_color_4"
            android:text="@string/bp_sys_range"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/quicl_measure_text_color_4"
            android:text="@string/qc_dps_range"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:visibility="gone"
            android:textColor="@color/quicl_measure_text_color_4"
            android:text="@string/qc_aver_range"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_measure_bp"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textColor="#fff"
        android:text="@string/qc_measure"
        android:background="@drawable/qc_dark_blue_selector"
        />

</RelativeLayout>
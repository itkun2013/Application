    <LinearLayout
        android:id="@+id/ll_cuff"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/blood_presure"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/quicl_measure_text_color_2"
            android:text="@string/cuff_pressure"/>

        <TextView
            android:id="@+id/tv_cuff"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/default_value"
            android:textColor="@color/quicl_measure_text_color_2"
            android:textSize="17sp"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_shrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_value"
            android:textColor="@color/quick_measure_text_color_1"
            android:textSize="35sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/c_devide"
            android:textColor="@color/quick_measure_text_color_1"
            android:textSize="35sp"
            />
        <TextView
            android:id="@+id/tv_spread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_value"
            android:textColor="@color/quick_measure_text_color_1"
            android:layout_marginRight="10dp"
            android:textSize="35sp"
            />
        <TextView
            android:id="@+id/tv_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:text="@string/qc_bp_aver"
            android:textColor="@color/quick_measure_text_color_1"
            android:textSize="35sp"
            />


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.konsung.fragment.AddPatientFragment">

    <RelativeLayout
        android:id="@+id/rl_patient_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="70dp"
        >
        <LinearLayout
            android:id="@+id/ll_patient_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            >
            <!--姓名 身份证-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/user_add_page_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                >
                <TextView
                    android:id="@+id/name_hint"
                    android:layout_width="@dimen/space"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ff875e"/>
                <TextView
                    android:id="@+id/patient_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/patient_name"
                    android:textColor="@color/user_add_title_color"
                    android:textSize="@dimen/user_add_title_textsize"/>

                <EditText
                    android:id="@+id/patient_name_et"
                    android:layout_width="@dimen/user_add_page_item_width"
                    android:layout_height="match_parent"
                    android:maxLength="10"
                    android:minWidth="250dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/user_add_et_bg"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/actionbar_bg_color"
                    android:textSize="@dimen/user_add_title_textsize"
                    />

                <TextView
                    android:id="@+id/id_hint"
                    android:layout_width="@dimen/space"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="#ff875e"
                    android:layout_marginLeft="120dp"
                    />
                <TextView
                    android:id="@+id/patient_idCard_tv"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/patient_idCard"
                    android:textSize="@dimen/user_add_title_textsize"
                    android:gravity="center_vertical|right"
                    />

                <EditText
                    android:id="@+id/patient_idCard_et"
                    android:layout_width="@dimen/user_add_page_item_width"
                    android:layout_height="match_parent"
                    android:digits="0123456789xX"
                    android:inputType="number"
                    android:maxLength="18"
                    android:minWidth="250dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/user_add_et_bg"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/actionbar_bg_color"
                    android:textSize="@dimen/user_add_title_textsize"
                    />

            </LinearLayout>

            <!-- 年龄 会员卡-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/user_add_page_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/patient_age"
                    android:textColor="@color/user_add_title_color"
                    android:textSize="@dimen/user_add_title_textsize"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/patient_age_et"
                    android:layout_width="@dimen/user_add_page_item_width"
                    android:layout_height="match_parent"
                    android:maxLength="3"
                    android:minWidth="250dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/user_add_et_bg"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/actionbar_bg_color"
                    android:textSize="@dimen/user_add_title_textsize"
                    android:inputType="number"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/patient_year"
                    android:textColor="@color/user_add_title_color"
                    android:textSize="@dimen/user_add_title_textsize"

                    />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/membership_card"
                    android:textSize="@dimen/user_add_title_textsize"
                    android:layout_marginLeft="113dp"
                    android:gravity="center_vertical|right"
                    />

                <EditText
                    android:id="@+id/membership_card_et"
                    android:layout_width="@dimen/user_add_page_item_width"
                    android:layout_height="match_parent"
                    android:digits="@string/filter_vcode"
                    android:inputType="number"
                    android:maxLength="18"
                    android:minWidth="250dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/user_add_et_bg"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/actionbar_bg_color"
                    android:textSize="@dimen/user_add_title_textsize"
                    />
            </LinearLayout>

            <!-- 性别 血型-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/user_add_page_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/patient_sex"
                    android:textColor="@color/user_add_title_color"
                    android:textSize="@dimen/user_add_title_textsize"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/patient_sex_et"
                    android:layout_width="@dimen/user_add_page_item_width"
                    android:layout_height="match_parent"
                    android:maxLength="10"
                    android:minWidth="250dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/user_add_tv_bg"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/actionbar_bg_color"
                    android:drawableRight="@drawable/ic_drop_dpwn_list"
                    android:paddingRight="8dp"
                    android:textSize="@dimen/user_add_title_textsize"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/patient_blood"
                    android:textSize="@dimen/user_add_title_textsize"
                    android:layout_marginLeft="130dp"
                    android:gravity="center_vertical|right"
                    />

                <TextView
                    android:id="@+id/patient_blood_type_et"
                    android:layout_width="@dimen/user_add_page_item_width"
                    android:layout_height="match_parent"
                    android:digits="0123456789xX"
                    android:inputType="number"
                    android:maxLength="18"
                    android:minWidth="250dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/user_add_tv_bg"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/actionbar_bg_color"
                    android:drawableRight="@drawable/ic_drop_dpwn_list"
                    android:paddingRight="8dp"
                    android:textSize="@dimen/user_add_title_textsize"
                    />
            </LinearLayout>
            <!-- 电话 病人类型-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/user_add_page_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/tele"
                    android:textColor="@color/user_add_title_color"
                    android:textSize="@dimen/user_add_title_textsize"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/patient_tele_et"
                    android:layout_width="@dimen/user_add_page_item_width"
                    android:layout_height="match_parent"
                    android:maxLength="15"
                    android:minWidth="250dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/user_add_et_bg"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/actionbar_bg_color"
                    android:textSize="@dimen/user_add_title_textsize"
                    android:inputType="phone"
                    />

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/patient_type"
                    android:textSize="@dimen/user_add_title_textsize"
                    android:layout_marginLeft="105dp"
                    android:gravity="center_vertical|right"
                    />

                <TextView
                    android:id="@+id/patient_type_et"
                    android:layout_width="@dimen/user_add_page_item_width"
                    android:layout_height="match_parent"
                    android:digits="0123456789xX"
                    android:inputType="number"
                    android:maxLength="18"
                    android:minWidth="250dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/user_add_tv_bg"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/actionbar_bg_color"
                    android:drawableRight="@drawable/ic_drop_dpwn_list"
                    android:paddingRight="8dp"
                    android:textSize="@dimen/user_add_title_textsize"
                    />
            </LinearLayout>
            <!-- 住址-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/user_add_page_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/address"
                    android:textColor="@color/user_add_title_color"
                    android:textSize="@dimen/user_add_title_textsize"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/patient_address_et"
                    android:layout_width="646dp"
                    android:layout_height="match_parent"
                    android:maxLength="50"
                    android:minWidth="250dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/user_add_et_bg"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/actionbar_bg_color"
                    android:textSize="@dimen/user_add_title_textsize"
                    />
            </LinearLayout>
            <!-- 备注-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/user_add_page_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/note"
                    android:textColor="@color/user_add_title_color"
                    android:textSize="@dimen/user_add_title_textsize"
                    android:layout_marginLeft="10dp"
                    />

                <EditText
                    android:id="@+id/patient_note_et"
                    android:layout_width="646dp"
                    android:layout_height="match_parent"
                    android:maxLength="50"
                    android:minWidth="250dp"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/user_add_et_bg"
                    android:layout_marginLeft="6dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/actionbar_bg_color"
                    android:textSize="@dimen/user_add_title_textsize"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/buttons_rl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"
            >

            <com.konsung.defineview.ImageTextButton
                android:id="@+id/save_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/save"
                android:textSize="@dimen/user_add_title_textsize"
                />
        </LinearLayout>
    </RelativeLayout>
    <com.konsung.defineview.CircleImageView
        android:id="@+id/patient_head_pic"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:src="@drawable/pic_default_avatar_normal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:civ_border_width="1.5dp"
        app:civ_border_color="@color/actionbar_bg_color"
        />
</RelativeLayout>

                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/alarm_high"
                android:visibility="invisible"/>
        </LinearLayout>

        <!-- 正常参考值-->
        <LinearLayout

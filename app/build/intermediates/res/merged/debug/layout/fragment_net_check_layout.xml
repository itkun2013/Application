<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/start_net_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_public_bg"
        android:text="@string/start_check_net"
        android:textColor="@color/actionbar_bg_color"
        android:padding="10dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/net_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/net_work"
        android:layout_marginTop="20dp"
        android:gravity="left"
        />
    <TextView
        android:id="@+id/wifi_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wifi_work"
        android:gravity="left"
        android:layout_marginTop="5dp"
        />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px24"
            android:layout_marginRight="@dimen/px12"
            android:layout_marginTop="@dimen/px24"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px150"
                android:src="@drawable/pic_glu1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/glu_guide_1"
                android:textColor="@color/ecg_guide_text_black"
                android:textSize="@dimen/px22"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px12"
            android:layout_marginRight="@dimen/px12"
            android:layout_marginTop="@dimen/px24"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px150"
                android:src="@drawable/pic_glu2"
                />

            <TextView
                android:id="@+id/tv_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/glu_guide_2"
                android:textColor="@color/ecg_guide_text_black"
                android:textSize="@dimen/px22"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px12"
            android:layout_marginRight="@dimen/px24"
            android:layout_marginTop="@dimen/px24"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/px150"
                android:src="@drawable/pic_glu3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/glu_guide_3"
                android:textColor="@color/ecg_guide_text_black"
                android:textSize="@dimen/px22"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
        <TextView
            android:gravity="center"
            android:text="卫生监督协管信息报告登记"
            android:textStyle="bold"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dp"
            android:background="#FF909090" />
        <TableRow
            android:background="@drawable/edit_bold">
            <TextView
                style="@style/FormTextView"
                android:text="发现时间" />
            <com.konsung.defineview.ButtonFlat
                android:id="@+id/discoverDate"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/txt_color"
                android:text="@string/patient_birthday_btn" />
        </TableRow>
        <TableRow
            android:background="@drawable/edit_bold_top">
            <TextView
                style="@style/FormTextView"
                android:layout_height="fill_parent"
                android:text="信息类别"/>
            <RadioGroup
                android:id="@+id/infoClassesCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_span="4">
                <!--食品安全、饮用水卫生、职业病危害、学校卫生、非法行医（采供血）。-->
                <RadioButton
                    android:id="@+id/infoClassesCode_1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="1 食品安全"
                    android:tag="1"
                    android:textSize="13sp"/>
                <RadioButton
                    android:id="@+id/infoClassesCode_2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="2 饮用水卫生"
                    android:tag="2"
                    android:textSize="13sp"/>
                <RadioButton
                    android:id="@+id/infoClassesCode_3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="3 职业病危害"
                    android:tag="3"
                    android:textSize="13sp"/>
                <RadioButton
                    android:id="@+id/infoClassesCode_4"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="4 学校卫生"
                    android:tag="4"
                    android:textSize="13sp"/>
                <RadioButton
                    android:id="@+id/infoClassesCode_5"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="5 非法行医（采供血）"
                    android:tag="5"
                    android:textSize="13sp"/>
                <RadioButton
                    android:id="@+id/infoClassesCode_6"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="6 其他"
                    android:tag="6"
                    android:textSize="13sp"/>
            </RadioGroup>
        </TableRow>
        <TableRow
            android:background="@drawable/edit_bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                style="@style/FormTextView"
                android:layout_height="fill_parent"

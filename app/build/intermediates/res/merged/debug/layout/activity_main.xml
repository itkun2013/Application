<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialDesign="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.konsung.fragment.AppFragment">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/main_personal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/main_click_bg"
                >
                <com.konsung.defineview.CircleImageView
                    android:id="@+id/main_head_pic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/pic_default_avatar_normal"
                    app:civ_border_width="1.5dp"
                    app:civ_border_color="@color/actionbar_bg_color"
                    />
                <TextView
                    android:id="@+id/main_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/main_item_15"
                    android:textColor="@color/main_item_color_1"
                    android:layout_marginTop="6dp"
                    android:maxEms="4"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />
                <LinearLayout
                    android:id="@+id/main_change_layout"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
                    >
                    <TextView
                        android:id="@+id/main_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="成人"
                        android:textSize="@dimen/main_item_13"
                        android:textColor="@color/main_item_color_2"
                        />
                    <ImageView
                        android:id="@+id/main_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_male_mine"
                        android:scaleType="center"
                        android:layout_marginLeft="4dp"
                        />
                    </LinearLayout>
                <TextView
                    android:id="@+id/main_user_add_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新增居民"
                    android:textSize="@dimen/main_item_13"
                    android:textColor="@color/main_item_color_2"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/head_pic_fill"
                android:layout_marginLeft="@dimen/main_line_margin"
                android:layout_marginRight="@dimen/main_line_margin"
                />
            <LinearLayout
                android:id="@+id/main_residents_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/main_click_bg"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_page_resident"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_residents_list"
                    android:textSize="@dimen/main_item_15"
                    android:textColor="@color/main_item_color_1"
                    android:layout_marginTop="6dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/head_pic_fill"
                android:layout_marginLeft="@dimen/main_line_margin"
                android:layout_marginRight="@dimen/main_line_margin"
                />
            <LinearLayout
                android:id="@+id/main_medical_report"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/main_click_bg"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_page_report"
                    android:scaleType="center"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_medical_report"
                    android:textSize="@dimen/main_item_15"
                    android:textColor="@color/main_item_color_1"
                    android:layout_marginTop="6dp"
                    android:id="@+id/textView4"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/head_pic_fill"
                android:layout_marginLeft="@dimen/main_line_margin"
                android:layout_marginRight="@dimen/main_line_margin"
                />
            <LinearLayout
                android:id="@+id/main_tele_ecg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/main_click_bg"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_page_remote_ecg"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_tele_ecg"
                    android:textSize="@dimen/main_item_15"
                    android:textColor="@color/main_item_color_1"
                    android:layout_marginTop="6dp"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/head_pic_fill"
                android:layout_marginLeft="@dimen/main_line_margin"
                android:layout_marginRight="@dimen/main_line_margin"
                />
            <LinearLayout
                android:id="@+id/main_system_settings"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/main_click_bg"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home_page_system_settings"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_system_setting"
                    android:textSize="@dimen/main_item_15"
                    android:textColor="@color/main_item_color_1"
                    android:layout_marginTop="6dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/app_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8.6">
        <LinearLayout
            android:id="@+id/blank_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pic_blank"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/no_current_patient"
                android:textSize="18sp"
                android:textColor="#666666"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                >
                <TextView
                android:id="@+id/main_user_add_new"
                android:layout_width="84dp"
                android:layout_height="32dp"
                android:text="新增"
                android:textColor="#3bd1bf"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@drawable/mian_blank_btn_click_bg"
                />

                <TextView
                    android:id="@+id/main_user_download"
                    android:layout_width="84dp"
                    android:layout_height="32dp"
                    android:text="下载"
                    android:textColor="#3bd1bf"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/mian_blank_btn_click_bg"
                    />
                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>

</LinearLayout>

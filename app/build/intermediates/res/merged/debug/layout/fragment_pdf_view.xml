<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pv_help"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <com.github.barteksc.pdfviewer.ScrollBar
        android:id="@+id/sb_scrollBar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:sb_handlerColor="#4db133"
        app:sb_indicatorColor="#ffffff"
        app:sb_indicatorTextColor="#333"
        android:visibility="gone"
        android:background="#e6e6e6"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp">
        <Button
            android:id="@+id/btn_pre"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn_pre"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_page_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#fff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/ic_bg_page"
            android:text="0/0"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_btn_next"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tip_empt_help_file"
        android:textSize="35sp"
        android:textColor="#333"
        android:visibility="gone"
        android:layout_centerInParent="true"/>
</RelativeLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.konsung.fragment.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3.8"
    android:scrollbars="none"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <LinearLayout
                android:id="@+id/ll_sys_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/system_left_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white_color"
                android:layout_marginRight="@dimen/system_pic_margin"
                >
                <ImageView
                    android:id="@+id/sys_setting_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_app_setting"
                    android:layout_marginLeft="@dimen/system_left_item_margin_left"
                    />
                <TextView
                    android:id="@+id/sys_setting_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应用设置"
                    android:textSize="18sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    />
                </LinearLayout>
                <ImageView
                    android:id="@+id/system_right_iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="33dp"
                    android:src="@drawable/ic_side_menu_pointer"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/head_pic_fill"
                android:layout_marginLeft="@dimen/system_line_margin"
                android:layout_marginRight="@dimen/system_line_margin"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            <LinearLayout
                android:id="@+id/ll_sys_pull"
                android:layout_width="match_parent"
                android:layout_height="@dimen/system_left_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white_color"
                android:layout_marginRight="@dimen/system_pic_margin"
                >
                <ImageView
                    android:id="@+id/sys_pull_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_import"
                    android:layout_marginLeft="@dimen/system_left_item_margin_left"
                    />
                <TextView
                    android:id="@+id/sys_pull_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导入"
                    android:textSize="18sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    />
            </LinearLayout>
                <ImageView
                    android:id="@+id/system_right_iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="33dp"
                    android:src="@drawable/ic_side_menu_pointer" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/head_pic_fill"
                android:layout_marginLeft="@dimen/system_line_margin"
                android:layout_marginRight="@dimen/system_line_margin"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_sys_push"
                android:layout_width="match_parent"
                android:layout_height="@dimen/system_left_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white_color"
                android:layout_marginRight="@dimen/system_pic_margin"
                >
                <ImageView
                    android:id="@+id/sys_push_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_export"
                    android:layout_marginLeft="@dimen/system_left_item_margin_left"
                    />
                <TextView
                    android:id="@+id/sys_push_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导出"
                    android:textSize="18sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    />
            </LinearLayout>
                <ImageView
                    android:id="@+id/system_right_iv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="33dp"
                    android:src="@drawable/ic_side_menu_pointer" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/head_pic_fill"
                android:layout_marginLeft="@dimen/system_line_margin"
                android:layout_marginRight="@dimen/system_line_margin"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_system_video_practise"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/system_left_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginRight="@dimen/system_pic_margin"
                    >
                    <ImageView
                        android:id="@+id/sys_vp_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_settings_video"
                        android:layout_marginLeft="@dimen/system_left_item_margin_left"
                        />
                    <TextView
                        android:id="@+id/sys_vp_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="视频培训"
                        android:textSize="18sp"
                        android:textColor="#666666"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/system_right_iv_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="33dp"
                    android:src="@drawable/ic_side_menu_pointer" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/head_pic_fill"
                android:layout_marginLeft="@dimen/system_line_margin"
                android:layout_marginRight="@dimen/system_line_margin"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_system_factory_protect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/system_left_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white_color"
                android:layout_marginRight="@dimen/system_pic_margin"
                >
                <ImageView
                    android:id="@+id/sys_fp_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_maintenance"
                    android:layout_marginLeft="@dimen/system_left_item_margin_left"
                    />
                <TextView
                    android:id="@+id/sys_fp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="厂家维护"
                    android:textSize="18sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    />
            </LinearLayout>
                <ImageView
                    android:id="@+id/system_right_iv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="33dp"
                    android:src="@drawable/ic_side_menu_pointer" />
            </RelativeLayout>
            <View
                android:id="@+id/line_factory"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/head_pic_fill"
                android:layout_marginLeft="@dimen/system_line_margin"
                android:layout_marginRight="@dimen/system_line_margin"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_system_skin_set"
                android:layout_width="match_parent"
                android:layout_height="@dimen/system_left_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white_color"
                android:layout_marginRight="@dimen/system_pic_margin"
                >
                <ImageView
                    android:id="@+id/sys_skin_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_skin_setting"
                    android:layout_marginLeft="@dimen/system_left_item_margin_left"
                    />
                <TextView
                    android:id="@+id/sys_skin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skin_setting"
                    android:textSize="18sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    />
            </LinearLayout>
                <ImageView
                    android:id="@+id/system_right_iv_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="33dp"
                    android:src="@drawable/ic_side_menu_pointer" />
            </RelativeLayout>
            <View
                android:id="@+id/skin_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/head_pic_fill"
                android:layout_marginLeft="@dimen/system_line_margin"
                android:layout_marginRight="@dimen/system_line_margin"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_system_net_check"
                android:layout_width="match_parent"
                android:layout_height="@dimen/system_left_item_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white_color"
                android:layout_marginRight="@dimen/system_pic_margin"
                >
                <ImageView
                    android:id="@+id/sys_net_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_settings_network_test"
                    android:layout_marginLeft="@dimen/system_left_item_margin_left"
                    />
                <TextView
                    android:id="@+id/sys_net_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/net_check"
                    android:textSize="18sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    />
            </LinearLayout>
                <ImageView
                    android:id="@+id/system_right_iv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="33dp"
                    android:src="@drawable/ic_side_menu_pointer"
                    />
            </RelativeLayout>
            <View
                android:id="@+id/net_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/head_pic_fill"
                android:layout_marginLeft="@dimen/system_line_margin"
                android:layout_marginRight="@dimen/system_line_margin"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/ll_system_about"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/system_left_item_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginRight="@dimen/system_pic_margin"
                    >
                    <ImageView
                        android:id="@+id/sys_about_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_settings_about"
                        android:layout_marginLeft="@dimen/system_left_item_margin_left"
                        />
                    <TextView
                        android:id="@+id/sys_about_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关于"
                        android:textSize="18sp"
                        android:textColor="#666666"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/system_right_iv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="33dp"
                    android:src="@drawable/ic_side_menu_pointer" />
            </RelativeLayout>
            <View
                android:id="@+id/line_video"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:background="@color/head_pic_fill"
                android:layout_marginLeft="@dimen/system_line_margin"
                android:layout_marginRight="@dimen/system_line_margin"
                />
        </LinearLayout>
</ScrollView>

        <FrameLayout
            android:id="@+id/right_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
        </FrameLayout>
    </LinearLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_root"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:id="@+id/tv_count"
        android:layout_width="40dp"
        android:layout_height="match_parent"/>
    <!--姓名-->
    <TextView
        android:gravity="center"
        android:id="@+id/tv_p_name"
        android:layout_marginLeft="10dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="XXXX"
        android:textColor="@color/darker_blue"
        android:textSize="16sp" />
    <!--性别-->
    <TextView
        android:id="@+id/p_sex"
        android:layout_width="60dp"
        android:gravity="center"
        android:text="未知"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:minWidth="40dp"

        android:textSize="16sp" />
    <!--身份证-->
    <TextView
        android:id="@+id/p_idcard"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:maxLength="18"
        android:text="123456789123456789"
        android:textSize="16sp" />
    <!--出生日期-->
    <TextView
        android:id="@+id/p_birthday"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="1993年93月93日"
        android:layout_marginLeft="15dp"
        android:textSize="16sp" />

    <TextView
        android:gravity="center"
        android:id="@+id/p_state"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/zero"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/p_select_ib"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/image_description_health_check"
        android:textColor="#1E88E5"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/p_editor_ib"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:src="@drawable/ic_edit_24dp"
        android:layout_gravity="center"
        android:scaleType="center"
        android:visibility="gone"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/p_delete_ib"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:scaleX="1.4"
        android:scaleY="1.4"
        android:src="@drawable/ic_delete_24dp"
        android:layout_gravity="center"
        android:scaleType="center"
        android:visibility="gone"
        android:layout_marginLeft="15dp"/>
    <CheckBox
        android:id="@+id/cb_multidel"
        style="@style/MyCheckBox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="visible"
        android:layout_marginLeft="40dp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        >
        <shape
            android:shape="rectangle"
            >
            <solid
                android:color="#fff"
                />
            <stroke
                android:color="#3bd1bf"
                android:width="0.5dp"
                />
            <corners
                android:radius="3dp"
                />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            >
            <solid
                android:color="#fff"
                />
            <stroke
                android:color="#cccccc"
                android:width="0.5dp"
                />
            <corners
                android:radius="3dp"
                />
        </shape>
    </item>
</selector>
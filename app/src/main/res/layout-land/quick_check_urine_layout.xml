<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_width"
    android:layout_height="@dimen/item_height_1"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_all">

        <TextView
                android:id="@+id/blood_red_unmeasure"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ns_unmeasure"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/count"
                android:visibility="gone"
                />

        <RelativeLayout
            android:id="@+id/ll_first_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/blood_red_unmeasure"
            android:layout_toEndOf="@+id/blood_red_unmeasure">
            <TextView
                android:id="@+id/ns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qc_ns"
                android:textColor="@color/white"
                android:textSize="@dimen/value_state"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/ns_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.42"
                android:textSize="@dimen/unit"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_below="@+id/ns"
                />
            <TextView
                android:id="@+id/ns_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.2"
                android:textSize="@dimen/unit"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:layout_below="@+id/ns_max"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:id="@+id/ns_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36.4"
                    android:textSize="@dimen/result_show"
                    android:layout_marginTop="35dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/td_value_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/p_unit_mmol"
                    android:textSize="@dimen/unit"
                    android:textColor="@color/white"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="3dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>

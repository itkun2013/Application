<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/detail_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--6-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <!--血型-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_blood_type" />

                <TextView
                    android:id="@+id/blood_type_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:minWidth="100dp" />
            </LinearLayout>
            <!--RH-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="120dp"

                    android:layout_height="wrap_content"
                    android:paddingRight="17dp"
                    android:text="@string/detail_blood_RH" />

                <Spinner
                    android:id="@+id/blood_RH_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:minWidth="100dp" />
            </LinearLayout>
        </LinearLayout>

        <!--7-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <!--文化程度-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_degree_of_education" />

                <Spinner
                    android:id="@+id/degreeOfEducation_sp"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:minWidth="100dp" />
            </LinearLayout>
            <!--职业-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="120dp"

                android:layout_height="wrap_content"
                android:paddingRight="50dp"
                android:text="@string/detail_career" />

            <Spinner
                android:id="@+id/career_sp"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="true"
                android:minWidth="100dp" />
        </LinearLayout>

        <!--8-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <!--婚姻状况-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="120dp"

                    android:layout_height="wrap_content"
                    android:text="@string/detail_maritalStatus" />

                <Spinner
                    android:id="@+id/marital_sp"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:drawSelectorOnTop="true"
                    android:minWidth="100dp" />
            </LinearLayout>

        </LinearLayout>
        <!--9-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:paddingBottom="5dp">
            <!--医疗费用支付方式-->
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"

                android:text="@string/detail_payType" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="5dp">

                    <!--                    <Spinner
                                            android:id="@+id/payType_1"
                                            android:layout_width="250dp"
                                            android:layout_height="wrap_content"
                                            android:drawSelectorOnTop="true"
                                            android:minWidth="100dp" />-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:text="@string/detail_paytype_all1"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingBottom="5dp"
                            android:text="@string/detail_paytype_all2"
                            android:textSize="14dp" />

                        <!--<com.cengalabs.flatui.views.FlatEditText-->
                        <!--android:id="@+id/payother_ed"-->
                        <!--android:layout_width="200dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:singleLine="true"-->
                        <!--flatui:fl_fieldStyle="fl_transparent" />-->
                        <EditText
                            android:id="@+id/payother_ed"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:singleLine="true" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/payType_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="5dp"
                                android:text="①"
                                android:textColor="@color/grass_konsung"
                                android:textSize="30sp" />

                            <com.cengalabs.flatui.views.FlatEditText
                                android:id="@+id/pay1_ed"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textSize="14sp"
                                android:singleLine="true"
                                flatui:fl_fieldStyle="fl_transparent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingLeft="20dp"
                                android:text="②"
                                android:textColor="@color/grass_konsung"
                                android:textSize="30sp" />

                            <com.cengalabs.flatui.views.FlatEditText
                                android:id="@+id/pay2_ed"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:singleLine="true"
                                android:textSize="14sp"
                                flatui:fl_fieldStyle="fl_transparent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingLeft="20dp"
                                android:text="③"
                                android:textColor="@color/grass_konsung"
                                android:textSize="30sp" />

                            <com.cengalabs.flatui.views.FlatEditText
                                android:id="@+id/pay3_ed"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:singleLine="true"
                                android:textSize="14sp"
                                flatui:fl_fieldStyle="fl_transparent" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <com.konsung.defineview.ImageTextButton
                android:id="@+id/pre_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@color/float_btn_color"
                android:text="@string/previous_page"
                android:textColor="#ededed"
                android:textSize="30sp"/>

            <com.konsung.defineview.ImageTextButton
                android:id="@+id/next_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@color/float_btn_color"
                android:text="@string/next_page"
                android:textColor="#ededed"
                android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

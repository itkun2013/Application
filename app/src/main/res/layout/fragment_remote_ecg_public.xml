<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/remote_content_layout"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        >

        <ListView
            android:id="@+id/left_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:cacheColorHint="@null"
            android:scrollbars="none"
            >
        </ListView>

        <ListView
            android:id="@+id/right_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:cacheColorHint="@null"
            android:scrollbars="none"
            >
        </ListView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/remote_devider"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/remote_devider_color"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/total_and_current"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="当前第6页，总共40页"
            android:textSize="@dimen/remote_1"
            android:textColor="@color/color_grey"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:paddingRight="20dp"
            android:layout_marginTop="8dp"
            >
            <include
                layout="@layout/remote_ecg_layout_page_container"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
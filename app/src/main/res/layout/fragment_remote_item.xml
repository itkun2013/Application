<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    >

    <View
        android:id="@+id/view_change_line"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="@color/color_line1"
        />
    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="4dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欧阳"
            android:textStyle="bold"
            android:textSize="@dimen/remote_item_size"
            android:textColor="@color/color_grey"
            android:maxEms="4"
            android:ellipsize="end"
            android:singleLine="true"
            />
        <ImageView
            android:id="@+id/sex"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_male"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29岁"
            android:textSize="@dimen/remote_item_size"
            android:textColor="@color/color_grey"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="421087199205142114"
            android:textSize="@dimen/remote_item_size"
            android:textColor="@color/color_grey"
            android:layout_marginLeft="20dp"
            android:maxLength="18"
            />
        <TextView
            android:id="@+id/tel_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13294165270"
            android:textSize="@dimen/remote_item_size"
            android:textColor="@color/color_grey"
            android:layout_marginLeft="10dp"
            android:maxLength="15"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请日期: "
            android:textSize="@dimen/remote_item_size"
            android:textColor="@color/color_grey"
            />
        <TextView
            android:id="@+id/apply_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017/7/2 12:30"
            android:textSize="@dimen/remote_item_size"
            android:textColor="@color/color_grey"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理状态: "
            android:textSize="@dimen/remote_item_size"
            android:textColor="@color/color_grey"
            android:layout_marginLeft="40dp"
            />
        <TextView
            android:id="@+id/confirm_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待处理"
            android:textSize="@dimen/remote_item_size"
            android:textColor="@color/color_grey"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/rl_root_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#7f000000">

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="415.5dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_rectangle"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55.5dp"
            android:background="@drawable/bg_pic5">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/ecg_setting"
                android:textColor="@color/normal_color"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_close"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                android:background="@drawable/ic_close_selector"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37.5dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ecg_mm"
                android:textColor="@color/value_text"/>

            <Spinner
                android:id="@+id/spn_speed"
                android:layout_width="217.5dp"
                android:layout_height="40.5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ecg_spinner_selector"
                android:drawSelectorOnTop="true"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ecg_xx"
                android:textColor="@color/value_text"/>

            <Spinner
                android:id="@+id/spn_amplification"
                android:layout_width="217.5dp"
                android:layout_height="40.5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/ecg_spinner_selector"
                android:drawSelectorOnTop="true"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37.5dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="105dp"
                android:layout_height="40.5dp"
                android:background="@drawable/btn_selector_blue"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/menuText"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="105dp"
                android:layout_height="40.5dp"
                android:layout_marginLeft="19.5dp"
                android:background="@drawable/btn_selector_blue"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/menuText"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

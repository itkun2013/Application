<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:konsung="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:flatui="http://schemas.android.com/apk/res-auto"
              android:id="@+id/get_all_patient_fragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.konsung.fragment.GetAllPatientFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white_color"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="@string/detail_name"
            android:textSize="@dimen/all_patient_textsize"
            android:textColor="@color/quicl_measure_text_color_2"
            />
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            >

            <EditText
                android:id="@+id/et_query_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_selector"
                android:hint="@string/input_name"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:textColor="@color/background_nor"
                android:textColorHint="@color/et_hint_color"/>

            <ImageView
                android:id="@+id/search_name_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_clean"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="@string/detail_idcard"
            android:textSize="@dimen/all_patient_textsize"
            android:textColor="@color/quicl_measure_text_color_2"
            />
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            >

            <EditText
                android:id="@+id/et_query_id_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_selector"
                android:digits="0123456789xX"
                android:hint="@string/input_idcard"
                android:inputType="number"
                android:maxLength="18"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:textColor="@color/background_nor"
                android:textColorHint="@color/et_hint_color"/>

            <ImageView
                android:id="@+id/search_idcard_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_clean"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                />
        </RelativeLayout>
        <com.konsung.defineview.ImageTextButton
            android:id="@+id/patient_query"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:text="查询"
            konsung:text_size="15"/>
        <Button
            android:id="@+id/btn_download_all"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="@string/download_all"
            android:background="@drawable/ks_btn_bg"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/btn_delete_all"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="@string/delete_all"
            android:background="@drawable/ks_btn_bg"
            android:textColor="#ffffff"
            android:gravity="center_vertical|center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textSize="16sp"/>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_title_container"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#CCCCCC"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--姓名-->
        <TextView
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="姓名"
            android:textSize="16sp" />

        <!--性别-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:layout_marginLeft="32dp"
            android:text="@string/sex"
            android:textSize="16sp" />

        <TextView
            android:layout_width="200dp"
            android:paddingLeft="78dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:maxLength="18"
            android:text="身份证"
            android:textSize="16sp" />

        <TextView
            android:paddingLeft="45dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="出生日期"
            android:textSize="16sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:paddingLeft="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/tepy"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_total_user"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="@string/operator"
            android:textSize="16sp" />

        <!--<Button-->
            <!--android:id="@+id/btn_delete_all"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="20dp"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:paddingTop="2dp"-->
            <!--android:paddingBottom="2dp"-->
            <!--android:text="@string/delete_all"-->
            <!--android:background="@drawable/ks_btn_bg"-->
            <!--android:textColor="#ffffff"-->
            <!--android:gravity="center_vertical|center"-->
            <!--android:layout_marginTop="2dp"-->
            <!--android:layout_marginBottom="2dp"-->
            <!--android:textSize="16sp"/>-->

    </LinearLayout>

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前无用户记录,请添加！"
        android:textColor="#999999"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="170dp"
        android:textSize="30sp"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/get_all_patient_lv"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_weight="1">
    </ListView>
    <LinearLayout
        android:id="@+id/float_button_rl"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center|bottom">

        <com.konsung.defineview.ImageTextButton
            android:visibility="gone"
            android:id="@+id/patient_updata_fb"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:src="@drawable/ico_upload"
            android:text="上传档案"
            konsung:text_size="16">
        </com.konsung.defineview.ImageTextButton>

        <!--按钮过多、过大导致翻页控件显示不全，暂时屏蔽不用的“下载档案”按钮-->
        <com.konsung.defineview.ImageTextButton
            android:visibility="gone"
            android:id="@+id/patient_download_fb"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ico_download"
            android:text="下载档案"
            konsung:text_size="16">
        </com.konsung.defineview.ImageTextButton>

        <com.konsung.defineview.ImageTextButton
            android:id="@+id/patient_add_fb"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_addn"
            android:text="新增用户"
            konsung:text_size="16">
        </com.konsung.defineview.ImageTextButton>

        <com.konsung.defineview.ImageTextButton
            android:id="@+id/patient_delete_fb"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_del"
            android:text="删除用户"
            konsung:text_size="16">
        </com.konsung.defineview.ImageTextButton>

        <com.konsung.defineview.ImageTextButton
            android:id="@+id/patient_modify_fb"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_edit"
            android:text="修改用户"
            konsung:text_size="16">
        </com.konsung.defineview.ImageTextButton>
        <com.konsung.defineview.ImageTextButton
            android:id="@+id/patient_logout_fb"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_expor"
            android:text="退出用户"
            konsung:text_size="16">
        </com.konsung.defineview.ImageTextButton>
        <com.konsung.defineview.ImageTextButton
            android:id="@+id/patient_select"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ico_query_patient"
            android:text="查询"
            konsung:text_size="15"
            android:visibility="gone"
            />
        <com.konsung.defineview.ImageTextButton
            android:id="@+id/all_upload"
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/all_upload"
            android:text="@string/all_upload"
            konsung:text_size="15"
            />
        <include
            layout="@layout/layout_page_container"/>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/remote_tab_height"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <LinearLayout
            android:id="@+id/ll_all"
            android:layout_width="@dimen/remote_tab_width"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_ecg"
                android:textSize="@dimen/remote_1"
                android:textColor="@color/remote_color_1"
                />
            <TextView
                android:id="@+id/all_ecg_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(480)"
                android:textColor="@color/remote_color_1"
                android:textSize="@dimen/remote_1"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_done"
            android:layout_width="@dimen/remote_tab_width"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm_ecg"
                android:textSize="@dimen/remote_1"
                android:textColor="@color/remote_color_1"
                />
            <TextView
                android:id="@+id/done_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(280)"
                android:textColor="@color/remote_color_1"
                android:textSize="@dimen/remote_1"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_wait"
            android:layout_width="@dimen/remote_tab_width"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wait_ecg"
                android:textSize="@dimen/remote_1"
                android:textColor="@color/remote_color_1"
                />
            <TextView
                android:id="@+id/wait_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(180)"
                android:textColor="@color/remote_color_1"
                android:textSize="@dimen/remote_1"
                android:visibility="gone"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/search_input"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text=""
            android:hint="请输入姓名或身份证号"
            android:background="@drawable/search_input_bg"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:textSize="@dimen/remote_1"
            android:gravity="center_vertical"
            />

        <Button
            android:id="@+id/search_tv"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:background="@drawable/remote_search_btn_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="搜索"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/remote_1"
            />
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <LinearLayout
            android:id="@+id/top_line_layout"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <View
                android:id="@+id/blue_line_1"
                android:layout_width="120dp"
                android:layout_height="4dp"
                android:background="@color/remote_color_1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
            <View
                android:id="@+id/blue_line_2"
                android:layout_width="120dp"
                android:layout_height="4dp"
                android:background="@color/remote_color_1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="invisible"
                />
            <View
                android:id="@+id/blue_line_3"
                android:layout_width="120dp"
                android:layout_height="4dp"
                android:background="@color/remote_color_1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="invisible"
                />
        </LinearLayout>
        <View
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/top_line_layout"
            android:background="@color/remote_devider_color"
            />
        <View
            android:id="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/line_1"
            android:background="@color/remote_devider"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>
</LinearLayout>
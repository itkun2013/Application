<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/layout_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:shrinkColumns="1,2,3"
        android:stretchColumns="1,2,3"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <TableRow>
            <TextView
                style="@style/FormTextView"
                android:text="活动时间"/>
            <com.konsung.defineview.ButtonFlat
                android:id="@+id/recordeDate"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/txt_color"
                android:text="@string/patient_birthday_btn" />
            <TextView
                style="@style/FormTextView"
                android:text="活动地点"/>
            <EditText
                android:id="@+id/recordePlace"
                style="@style/FormEditText" />
        </TableRow>
        <TableRow>
            <TextView
                style="@style/FormTextView"
                android:layout_height="fill_parent"
                android:text="活动形式"/>
            <EditText

                android:id="@+id/recordeShape"
                android:layout_span="3"
                style="@style/FormEditText"
                android:layout_marginTop="10dp"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:gravity="top|left"
                android:background="@drawable/edit_bold"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/FormTextView"
                android:layout_height="fill_parent"
                android:text="活动主题"/>
            <EditText
                android:id="@+id/recordeTheme"
                android:layout_span="3"
                style="@style/FormEditText"
                android:layout_marginTop="10dp"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:gravity="top|left"
                android:background="@drawable/edit_bold"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/FormTextView"
                android:layout_height="fill_parent"
                android:text="组织者"/>
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/recordeOrganizer"
                android:layout_span="3"
                style="@style/FormEditText"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:minLines="5"
                android:gravity="top|left"
                android:background="@drawable/edit_bold"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/FormTextView"
                android:text="接受教育人员类别:"/>
            <EditText
                android:id="@+id/recordeReceptor"
                style="@style/FormEditText"/>
            <TextView
                style="@style/FormTextView"
                android:text="接受健康教育人数："/>
            <EditText
                android:maxLength="5"
                android:id="@+id/recordeReceptorAmount"
                style="@style/FormEditText"
                android:inputType="number"/>
        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_span="4">
                <TextView
                    style="@style/FormTextView"
                    android:text="健康教育资料发放种类及数量:"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:id="@+id/recordeTypeAndAmount"
                    style="@style/FormEditText"
                    android:layout_width="fill_parent"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/FormTextView"
                android:layout_height="fill_parent"
                android:text="活动内容："/>
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/recordeContent"
                android:layout_span="3"
                style="@style/FormEditText"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:minLines="10"
                android:gravity="top|left"
                android:background="@drawable/edit_bold"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/FormTextView"
                android:layout_height="fill_parent"
                android:text="活动总结评价："/>
            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/recordeSummary"
                android:layout_span="3"
                style="@style/FormEditText"
                android:layout_height="fill_parent"
                android:inputType="textMultiLine"
                android:minLines="10"
                android:gravity="top|left"
                android:background="@drawable/edit_bold"/>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/FormTextView"
                android:layout_height="fill_parent"
                android:text="存档材料："/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_span="3"
                android:orientation="horizontal">
                <!--1 书面材料 2 图片材料 3 印刷材料 4 影音材料 5 签到表 6 其他材料-->
                <CheckBox
                    android:id="@+id/recordeArchiveMeterials_1"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="1 书面材料"
                    android:tag="1"
                    android:textSize="13sp"/>
                <CheckBox
                    android:id="@+id/recordeArchiveMeterials_2"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="2 图片材料"
                    android:tag="2"
                    android:textSize="13sp"/>
                <CheckBox
                    android:id="@+id/recordeArchiveMeterials_3"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="3 印刷材料"
                    android:tag="3"
                    android:textSize="13sp"/>
                <CheckBox
                    android:id="@+id/recordeArchiveMeterials_4"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="4 影音材料"
                    android:tag="4"
                    android:textSize="13sp"/>
                <CheckBox
                    android:id="@+id/recordeArchiveMeterials_5"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="5 签到表"
                    android:tag="5"
                    android:textSize="13sp"/>
                <CheckBox
                    android:id="@+id/recordeArchiveMeterials_6"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="6 其他材料"
                    android:tag="6"
                    android:textSize="13sp"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <TextView
                style="@style/FormTextView"
                android:text="填表人（签字）"/>
            <EditText
                android:id="@+id/fillEnpName"
                style="@style/FormEditText"/>
            <TextView
                style="@style/FormTextView"
                android:text="负责人（签字）"/>
            <EditText
                android:id="@+id/managerEmpName"
                style="@style/FormEditText"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_span="2"
                style="@style/FormTextView" />
            <TextView
                style="@style/FormTextView"
                android:text="填表日期"/>
            <com.konsung.defineview.ButtonFlat
                android:id="@+id/fillRecordeDate"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@color/txt_color"
                android:gravity="left"
                android:layout_marginLeft="50dp"
                android:text="@string/patient_birthday_btn" />

        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:layout_marginTop="20dp"
                android:gravity="right">

                <com.konsung.defineview.ImageTextButton
                    android:id="@+id/save_btn"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="保    存"
                    materialdesign:text_size="22" />
            </LinearLayout>
        </TableRow>
    </TableLayout>
</ScrollView>

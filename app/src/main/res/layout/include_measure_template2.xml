<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/measure_template_layout_width"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/measure_template_btn_margin"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@drawable/rounded_rectangle">

    <TextView
        android:id="@+id/tv_measure_template1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/measure_template_tv_margin_top"
        android:drawablePadding="@dimen/measure_template_drawable_start"
        android:textSize="@dimen/tutorial_select_text_size"
        />

    <TextView
        android:id="@+id/tv_measure_template2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_measure_template1"
        android:layout_marginTop="10dp"
        android:drawablePadding="@dimen/measure_template_drawable_start"
        android:textSize="@dimen/tutorial_select_text_size"/>

    <TextView
        android:id="@+id/tv_measure_template3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_measure_template2"
        android:layout_marginTop="10dp"
        android:drawablePadding="@dimen/measure_template_drawable_start"
        android:textSize="@dimen/tutorial_select_text_size"
        />


    <Button
        android:id="@+id/btn_measure_template1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/measure_template_btn_height"
        android:layout_above="@+id/btn_measure_template3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/measure_template_btn_margin"
        android:background="@drawable/btn_selector_blue"
        android:gravity="center"
        android:text="@string/start_measure"
        android:textColor="@color/menuText"
        android:textSize="@dimen/btn_text_size"/>

    <Button
        android:id="@+id/btn_measure_template3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/measure_template_btn_height"
        android:layout_above="@+id/btn_measure_template2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/measure_template_btn_margin"
        android:background="@drawable/btn_selector_blue"
        android:gravity="center"
        android:text="@string/trend_statistics"
        android:textColor="@color/menuText"
        android:textSize="@dimen/btn_text_size"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_measure_template2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/measure_template_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_selector_blue"
        android:gravity="center"
        android:text="@string/trend_statistics"
        android:textColor="@color/menuText"
        android:textSize="@dimen/btn_text_size"/>

</RelativeLayout>
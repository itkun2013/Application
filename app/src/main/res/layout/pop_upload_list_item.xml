<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!--档案号-->
    <TextView
        android:id="@+id/p_code"
        android:layout_width="130dp"
        android:layout_marginLeft="20dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textColor="@color/darker_blue"
        android:textSize="13sp" />

    <!--姓名-->
    <TextView
        android:id="@+id/tv_p_name"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/darker_blue"
        android:textSize="13sp" />

    <!--性别-->
    <TextView
        android:id="@+id/p_sex"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:minWidth="40dp"
        android:textSize="13sp" />
    <!--身份证-->
    <TextView
        android:id="@+id/p_idcard"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/p_sex"
        android:text="@string/patient_idCard"
        android:textSize="13sp" />

    <!--出生日期-->
    <TextView
        android:id="@+id/p_birthday"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/patient_birthday"
        android:maxLength="10"
        android:textSize="13sp" />

    <!--上传结果-->
    <TextView
        android:id="@+id/p_upload_result"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/p_upload_ready"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:visibility="gone"
        android:src="@drawable/upload_1"

        />

    <ImageView
        android:id="@+id/p_uploaded"
        android:layout_marginLeft="30dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:visibility="gone"
        android:src="@drawable/download_2"
        />

    <Button
        android:id="@+id/p_reupload"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:textSize="13sp"
        android:visibility="gone"
        android:textColor="@color/darker_blue"
        android:text="@string/ReUpload"
        />

</LinearLayout>
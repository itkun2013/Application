<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/version"
        android:layout_width="630dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="软件版本"
                android:textColor="#666"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/version_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:textColor="#666"
                android:textSize="15sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="修订版"
                android:textColor="#666"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/version_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:textColor="#666"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="适配器"
                android:textColor="#666"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/adapter_version_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:textColor="#666"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/db_version"
                android:textColor="#666"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/sqlite_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:textColor="#666"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="多参模块"
                android:textColor="#666"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/para_module"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:textColor="#666"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="@string/sequence"
                android:textColor="#666"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_sequence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:textColor="#666"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="设备号"
                android:textColor="#666"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/coding_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="@string/input_device_num"
                android:maxLines="2"
                android:textColor="#666"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/detection"
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:layout_marginLeft="200dp"
                android:background="@drawable/bg_btn_blue"
                android:gravity="center"
                android:text="检查软件更新"
                android:textSize="15sp"
                android:textColor="@color/main_app_color"/>

            <TextView
                android:id="@+id/btn_creat_data"
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_btn_blue"
                android:gravity="center"
                android:text="@string/create_data_300"
                android:textSize="15sp"
                android:textColor="@color/main_app_color"
                 />
        </LinearLayout>
    </LinearLayout>

</ScrollView>

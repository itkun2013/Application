<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="274px"
              android:layout_height="142px"
              android:layout_marginBottom="@dimen/px10"
              android:background="@drawable/rounded_rectangle"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="100px"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16px"
        android:paddingTop="@dimen/px16">

        <TextView
            android:id="@+id/tv_measure_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aa"
            android:textColor="@color/normal_color"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_measure_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="aa"
            android:textColor="@color/measureMax"
            android:textSize="@dimen/px18"/>

        <TextView
            android:id="@+id/tv_measure_min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="aa"
            android:textColor="@color/measureMax"
            android:textSize="@dimen/px18"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_measure_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/normal_color"
            android:textSize="@dimen/measure_value_textsize"/>

        <TextView
            android:id="@+id/tv_measure_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px16"
            android:layout_marginTop="-10dp"
            android:gravity="right"
            android:text="aa"
            android:textColor="@color/measureMax"
            android:textSize="@dimen/px18"/>

    </LinearLayout>

</LinearLayout>
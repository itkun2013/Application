<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/item_width"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_2"
        android:background="@drawable/bg_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/bg_above"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/dinner_before"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/before_dinner"
                    android:textColor="@color/white"
                    android:textSize="@dimen/value_state" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/dinner_after"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/after_dinner"
                    android:textColor="@color/white"
                    android:textSize="@dimen/unit" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/bg_below">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/blood_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="7.2"
                        android:textColor="@color/range_value_color"
                        android:textSize="@dimen/unit" />

                    <TextView
                        android:id="@+id/blood_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/blood_max"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="3.9"
                        android:textColor="@color/range_value_color"
                        android:textSize="@dimen/unit" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/tv_bs"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/default_value"
                            android:textColor="@color/grass_konsung_1"
                            android:textSize="@dimen/result_show" />

                        <TextView
                            android:id="@+id/xt_value_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:text="@string/health_unit_mol"
                            android:textColor="@color/range_value_color"
                            android:textSize="@dimen/unit" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_jiantou_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/glu_pointer" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_jiantou_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:visibility="invisible">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/glu_pointer" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_2"
        android:background="@drawable/bg_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_all">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/ns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/qc_ns"
                    android:textColor="@color/range_value_color"
                    android:textSize="@dimen/value_state" />

                <TextView
                    android:id="@+id/urine_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ns"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="0.42"
                    android:textColor="@color/range_value_color"
                    android:textSize="@dimen/unit" />

                <TextView
                    android:id="@+id/urine_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/urine_max"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="0.2"
                    android:textColor="@color/range_value_color"
                    android:textSize="@dimen/unit" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_ns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:gravity="center_horizontal"
                        android:text="@string/default_value"
                        android:textColor="@color/grass_konsung_1"
                        android:textSize="@dimen/result_show" />

                    <TextView
                        android:id="@+id/ns_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="35dp"
                        android:text="@string/p_unit_mmol"
                        android:textColor="@color/range_value_color"
                        android:textSize="@dimen/unit" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_2"
        android:background="@drawable/bg_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_all">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/td"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/qc_dgc"
                    android:textColor="@color/range_value_color"
                    android:textSize="@dimen/value_state" />

                <TextView
                    android:id="@+id/td_max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/td"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="5.2"
                    android:textColor="@color/range_value_color"
                    android:textSize="@dimen/unit" />

                <TextView
                    android:id="@+id/td_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/td_max"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="0.0"
                    android:textColor="@color/range_value_color"
                    android:textSize="@dimen/unit" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_td"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:gravity="center_horizontal"
                        android:text="@string/default_value"
                        android:textColor="@color/grass_konsung_1"
                        android:textSize="@dimen/result_show" />

                    <TextView
                        android:id="@+id/td_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="35dp"
                        android:text="@string/p_unit_mmol"
                        android:textColor="@color/range_value_color"
                        android:textSize="@dimen/unit" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
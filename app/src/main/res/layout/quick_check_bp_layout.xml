<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_width"
    android:layout_height="@dimen/item_height"
    android:orientation="vertical"
    android:background="@drawable/bg_white"
    >

    <RelativeLayout
        android:id="@+id/rl_blood_pressure_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/bg_above">
        <RelativeLayout
            android:id="@+id/rl_blood_pressure_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >
        <TextView
            android:id="@+id/bp_state_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bp_normal"
            android:textSize="@dimen/value_state"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_shrink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_value"
            android:textSize="@dimen/result_show"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:layout_below="@+id/bp_state_value"
            />
        <TextView
            android:id="@+id/devider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="@dimen/result_show"
            android:textColor="@color/white"
            android:layout_below="@+id/bp_state_value"
            android:layout_toRightOf="@+id/tv_shrink"
            />
        <TextView
            android:id="@+id/tv_spread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_value"
            android:textSize="@dimen/result_show"
            android:textColor="@color/white"
            android:layout_below="@+id/bp_state_value"
            android:layout_toRightOf="@+id/devider"
            />
        <TextView
            android:id="@+id/bp_value_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/health_unit_mmhg"
            android:textSize="@dimen/unit"
            android:layout_toRightOf="@+id/tv_spread"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            />
            </RelativeLayout>
        <LinearLayout
        android:id="@+id/ll_cuff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/count"
            android:textColor="@color/white"
            android:text="@string/cuff_pressure"/>

        <TextView
            android:id="@+id/tv_cuff"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/default_value"
            android:textColor="@color/white"
            android:textSize="@dimen/count"
            android:layout_marginLeft="2dp"
            />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_blood_pressure_unmeasure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/count"
                android:textColor="@color/white"
                android:text="血压未测量"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_below"
        android:orientation="vertical"
        >
        <TextView
        android:id="@+id/bp_sys"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/p_shousuoya"
        android:textSize="@dimen/unit"
        android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
        android:textColor="@color/range_value_color"
        />
        <TextView
            android:id="@+id/bp_sys_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="140"
            android:textSize="@dimen/unit"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/range_value_color"
            android:layout_toRightOf="@+id/bp_sys"
            />
        <TextView
            android:id="@+id/bp_sys_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90"
            android:textSize="@dimen/unit"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/range_value_color"
            android:layout_toRightOf="@+id/bp_sys"
            android:layout_below="@+id/bp_sys_max"
            />

        <TextView
            android:id="@+id/bp_dia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/p_shuzhangya"
            android:textSize="@dimen/unit"
            android:gravity="center_vertical"
            android:layout_marginLeft="55dp"
            android:textColor="@color/range_value_color"
            android:layout_toRightOf="@+id/bp_sys_min"
            />
        <TextView
            android:id="@+id/bp_dia_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90"
            android:textSize="@dimen/unit"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/range_value_color"
            android:layout_toRightOf="@+id/bp_dia"
            />
        <TextView
            android:id="@+id/bp_dia_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60"
            android:textSize="@dimen/unit"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/range_value_color"
            android:layout_toRightOf="@+id/bp_dia"
            android:layout_below="@+id/bp_dia_max"
            />

        <TextView
            android:id="@+id/btn_measure_bp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/qc_measure"
            android:textSize="@dimen/btn"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:textColor="@color/normal_color"
            android:layout_alignParentRight="true"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/divider"
            android:layout_toLeftOf="@+id/btn_measure_bp"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
</LinearLayout>

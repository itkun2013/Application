<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_blank"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/no_measure_report"
            android:textColor="@color/value_text"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_to_measure"
            android:layout_width="84dp"
            android:layout_height="32dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_no_data"
            android:gravity="center"
            android:text="@string/to_measure"
            android:textColor="@color/actionbar_bg_color"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="764dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <GridView
            android:id="@+id/gv_report"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:columnWidth="357dp"
            android:horizontalSpacing="50dp"
            android:numColumns="2"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:scrollbars="none"
            android:verticalSpacing="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_select_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_delete"
            android:gravity="center"
            android:text="@string/select_all"
            android:textColor="#666666"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_delete"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="#666666"
            android:textSize="18sp"/>
    </LinearLayout>
</RelativeLayout>

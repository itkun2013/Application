<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="@dimen/item_width"
              android:layout_height="@dimen/item_height"
              android:orientation="vertical"
              android:background="@drawable/bg_white"
    >

    <RelativeLayout
        android:id="@+id/rl_wbc_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/bg_above">

        <TextView
            android:id="@+id/wbc_unmeasure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/wbc_unmeasure"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/count_modify"
            />

        <RelativeLayout
            android:id="@+id/rl_wbc_result_ui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/wbc_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/param_white"
                android:textColor="@color/white"
                android:textSize="@dimen/value_state"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_wbc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_value"
                    android:textSize="@dimen/result_show"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10^9/L"
                    android:textSize="@dimen/unit_modify"
                    android:textColor="@color/white"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="3dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_below"
        >
        <TextView
            android:id="@+id/wbc_range"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="参考范围"
            android:textSize="@dimen/unit_modify"
            android:layout_marginLeft="10dp"
            android:textColor="@color/range_value_color"
            />
        <TextView
            android:id="@+id/wbc_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.0"
            android:textSize="@dimen/unit_modify"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/range_value_color"
            android:layout_toRightOf="@+id/wbc_range"
            />
        <TextView
            android:id="@+id/wbc_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.0"
            android:textSize="@dimen/unit_modify"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/range_value_color"
            android:layout_toRightOf="@+id/wbc_range"
            android:layout_below="@+id/wbc_max"
            />
    </RelativeLayout>
</LinearLayout>
